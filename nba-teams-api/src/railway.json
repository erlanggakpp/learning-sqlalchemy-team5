{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "PIPENV_VENV_IN_PROJECT=1 pipenv install --deploy"
    },
    "deploy": {
        "startCommand": "gunicorn app:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
